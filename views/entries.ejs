<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Entries</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f7f7f7;
      padding: 2rem;
    }
    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      table-layout: fixed; /* make widths consistent */
    }
    th, td {
      padding: 0.75rem 1rem;
      border-bottom: 1px solid #ddd;
      text-align: left;
      vertical-align: top;
      word-wrap: break-word;
    }
    th {
      background: #f0f0f0;
    }
    tr:hover {
      background: #fafafa;
    }
    /* column sizing */
    th:nth-child(1), td:nth-child(1) { width: 10%; } /* Name */
    th:nth-child(2), td:nth-child(2) { width: 15%; } /* Email */
    th:nth-child(3), td:nth-child(3) { width: 10%; } /* Number */
    th:nth-child(4), td:nth-child(4) { width: 40%; } /* Content (main) */
    th:nth-child(5), td:nth-child(5) { width: 15%; } /* Created */
    th:nth-child(6), td:nth-child(6) { width: 5%;  text-align: center; } /* Delete */
    .delete-form {
      display: inline;
    }
    .delete-btn {
      background: none;
      border: none;
      color: crimson;
      font-weight: bold;
      font-size: 1.2rem;
      cursor: pointer;
    }
    .delete-btn:hover {
      color: darkred;
    }
  </style>
</head>
<body>
  <h1>Entries</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Number</th>
        <th>Content</th>
        <th>Created</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% if (entries.length === 0) { %>
        <tr>
          <td colspan="6" style="text-align:center; padding: 2rem;">No entries yet.</td>
        </tr>
      <% } else { %>
        <% entries.forEach(entry => { %>
          <tr>
            <td><%= entry.name %></td>
            <td><%= entry.email %></td>
            <td><%= entry.number %></td>
            <td><%= entry.content %></td>
            <td><%= entry.time_created %></td>
            <td>
              <form class="delete-form" method="POST" action="/deleteEntry">
                <input type="hidden" name="id" value="<%= entry.id %>">
                <button type="submit" class="delete-btn">Ã—</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
